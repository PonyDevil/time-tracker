<div class="container mx-auto p-6 max-w-2xl">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">Nowy projekt</h1>

  <%= form_with model: @project, class: "space-y-6" do |f| %>
    <div>
      <%= f.label :name, "Nazwa projektu", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :name, 
                       class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
      <% if @project.errors[:name].any? %>
        <p class="text-red-600 text-sm mt-1"><%= @project.errors[:name].to_sentence %></p>
      <% end %>
    </div>

    <div>
      <%= f.label :description, "Opis (opcjonalny)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_area :description, rows: 4,
                      class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
    </div>

    <div class="flex gap-3">
      <%= f.submit "UtwÃ³rz projekt", 
                   class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 cursor-pointer transition" %>
      <%= link_to "Anuluj", root_path, 
                  class: "bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition" %>
    </div>
  <% end %>
</div>